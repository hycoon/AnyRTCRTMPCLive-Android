<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- padding设置内间距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <!-- size设置形状的大小 -->
    <size
        android:width="50dp"
        android:height="50dp" />
    <!-- gradient设置渐变 -->
    <gradient
        android:endColor="#7f5f"
        android:gradientRadius="10dp"
        android:startColor="#7FFF"
        android:type="radial" />

</shape>